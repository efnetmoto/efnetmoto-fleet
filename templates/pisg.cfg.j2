{% for channel in pisg_channels %}
<channel="{{ channel.name }}">
	LogDir = "/logs"
	LogPrefix = "{{ channel.log_prefix }}"
	Format = "{{ channel.format | default('eggdrop') }}"
	Network = "{{ channel.network | default(irc_network) }}"
	Maintainer = "{{ channel.maintainer | default(bot_owner) }}"
	OutputFile = "/output/{{ channel.output_file }}"
</channel>
{% endfor %}
